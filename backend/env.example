# ================================
# üåç SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:5173

# ================================
# üîß FEATURE FLAGS
# ================================
ENABLE_AI_INSIGHTS=true
ENABLE_GMAIL_INTEGRATION=true
